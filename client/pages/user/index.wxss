/* pages/user/index.wxss */
.hide{
  display:none;
}
.user-card{
  justify-content: space-around;
  margin: 0rpx 52rpx 28rpx;
}
.user-store{
  width: 100%;
  height: 100rpx;
  margin-top: 100rpx;
  display: flex;
  align-items: center;
}
.user-top-text{
  color: #f16745;
  font-size: 30rpx;
  padding-left: 100rpx;
}
.user-top-arrow{
  width: 20rpx;
  height: 20rpx;
  margin-left: 10rpx;
}
.user-store-items{
  display: flex;
  position: relative;
  flex-shrink: 0;
  align-items: center;
  background-color: white;
  margin: 50rpx auto;
  box-shadow: 1rpx 2rpx 50rpx 5rpx #eaeaea;
}
.item-image{
  flex-shrink: 0;
  width: 240rpx;
  height: 320rpx;
  left: 0;
}
.item-list{
  flex-shrink: 0;
  margin: 0 20rpx;
  position: relative;
  height: 100%;
  width: 100%;
}
.store-title{
  font-size: 33rpx;
  color: #34373D;
  font-weight: bold;
  width: 400rpx;
  margin: 50rpx 0 20rpx 0 ;
}
.store-context{
  flex-shrink: 0;
  height: 50rpx;
  width: 350rpx;
  font-size: 25rpx;
  margin: 20rpx 0 20rpx 0 ;
  /* 自动换行 */
  display: -webkit-box;
  color:#000000;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  overflow: hidden;
  text-overflow:ellipsis;
}
.reEditComBox{
  flex-shrink: 0;
  height: 50rpx;
  width: 350rpx;
  font-size: 25rpx;
  margin: 20rpx 0 20rpx 0 ;
}
.video-box{
  background-color:#dbe2e8;
  width: 300rpx;
  height: 55rpx;
  border-radius: 13rpx;
}
.video-button{
  align-items: center;
  width: 50rpx;
  height: 50rpx;
  margin-left: 32rpx;
}

.user-info{
  display: flex;
  margin: 20rpx 0 20rpx 0 ;
  align-items: center;
  opacity: 0.9;
  height: 95rpx;
  flex-shrink: 0;
}
.user-head{
  margin: 20rpx 0 20rpx 0 ;
  flex-shrink: 0;
  border-radius: 50%;
  height: 70rpx;
  width: 70rpx;
}
.user-name{
  margin: 50rpx 0 20rpx 10rpx ;
  flex-shrink: 0;
  height: 70rpx;
  width: 140rpx;
  opacity: 0.9;
  font-size: 30rpx;
  text-align: center;
}
.back-index{
  position: fixed;
  border-top: 2px solid rgba(151, 151, 151, 0.2);
  bottom: 0;
  height: 90rpx;
  width: 100%;
  background-color: white;
  text-align: center;
  font-size: 30rpx;
  line-height: 90rpx;
  color: #999999;
  font-weight: bold
}