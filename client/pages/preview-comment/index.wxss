/* pages/preview-comment/index.wxss */
.show-bg{
  height: 100%;
  width: 100%;
  background-color: hsla(189, 19%, 93%, 0.582);
  flex-shrink: 0;
}
.show-comment-items{
  justify-content: space-around;
  margin: 80rpx 28rpx 0 28rpx;
  background-color: white;
  height: 80%;
  /* 白色周围一圈透明黑 */
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
}
.show-comment-image{
  width: 240rpx;
  height: 320rpx;
  margin-top: -50rpx;
  margin-left: 50%;
  transform: translateX(-50%)
}
.show-comment-title{
  font-size: 36rpx;
  color: #34373D;
  font-weight: bold;
  text-align: center;
  margin-top: 20rpx;
}
.show-comment-bottem{
  padding-top: 50rpx;
  padding-left: 20%;
  flex-shrink: 0;
  align-items: center;
}
.user-info{
  margin: 0;
  display: flex;
  flex-shrink: 0;
  align-items: center;
  text-align: center;
  opacity: 0.9;
  height: 95rpx;
}
.user-head{
  flex-shrink: 0;
  border-radius: 50%;
  height: 70rpx;
  width: 70rpx;
}
.user-name{
  flex-shrink: 0;
  height: 70rpx;
  width: 200rpx;
  opacity: 0.9;
  font-size: 30rpx;
  padding-top: 20rpx;
}
.reEditComBox{
  margin-top: 30rpx;
  width: 400rpx;
  height: 200rpx;
  /* border:2px solid hsla(189, 19%, 93%, 0.582); */
  margin-left: 50%;
  transform: translateX(-50%)
}
.reEditComText{
  /* text 内容自动换行 */
  display: -webkit-box;
  font-size:28rpx;
  color:#000000;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  overflow: hidden;
  text-overflow:ellipsis;
}
.reEditComButton{
}
.video-box{
  background-color: rgba(159, 175, 175, 0.459);
  width: 300rpx;
  height: 65rpx;
  border-radius: 5%;
}
.video-button{
  width: 65rpx;
  height: 65rpx;
  margin-left: 32rpx;
}
.show-comment-footer{
  display: flex;
  position: relative;
  bottom: 50rpx;
  margin-top: 200rpx;
  height: 80rpx;
  width: 100%;
  margin-left: 60%;
  transform: translateX(-50%);
  margin-bottom: 50rpx;  
}
.show-comment-left-bottom{
  position: relative;
  /* 白色周围一圈透明黑 */
  box-shadow: 0 2rpx 13rpx 5rpx hsla(189, 19%, 93%, 0.582);
  border:2px solid hsla(189, 19%, 93%, 0.582);
  border-radius: 10rpx;
  width: 240rpx;
  margin-right: 50rpx;
  display: flex;
  align-items: center;
}
.show-comment-right-bottom{
  /* 白色周围一圈透明黑 */
  box-shadow: 0 2rpx 13rpx 5rpx hsla(189, 19%, 93%, 0.582);
  border:2px solid hsla(189, 19%, 93%, 0.582);
  border-radius: 10rpx;
  width: 240rpx;
  display: flex;
  align-items: center;
}
.left-footer-img{
  height: 50rpx;
  width: 20%;
  margin-left: 10%;
}
.left-footer-txt{
  font-size: 30rpx;
  margin-left: 5%;
}
.right-footer-img{
  height: 50rpx;
  width: 20%;
  margin-left: 10%;
}
.right-footer-txt{
  font-size: 30rpx;
  margin-left: 5%;
}
