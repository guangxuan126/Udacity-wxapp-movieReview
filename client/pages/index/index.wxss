/* pages/index/index.wxss */
.box{
  height: 100%;
  width: 100%;
  background-color: hsla(189, 19%, 93%, 0.582);
}
.home-page{
  top: 0;
  /* height: 1209rpx; */
}
.home-page .home-top{
  position: absolute;
  left: 80rpx;
  right: 80rpx;
  top: 50rpx;
  height: 85%;
  /* background-color:rgba(215, 233, 233, 0.459); */
}
.home-top .home-movie-detail{
  flex-shrink: 0;
}
.home-top .home-movie-title{
  flex-shrink: 0;
}
.home-top .home-top-detail{
  flex-shrink: 0;
}
.home-movie-detail{
  width: 100%;
  height: 70%;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
}
.home-movie-detail image{
  width: 100%;
  height: 100%;
  opacity: 0.8;
}
.home-movie-title{
  width: 100%;
  height: 10%;
  text-align: center;
  font-size: 50rpx;
  padding-top: 50rpx;
  opacity: 0.8;
}
.home-top-detail{
  bottom: 0;
  width: 100%;
  height: 100rpx;
  font-size: 30rpx;
  border-radius: 20%;
}
.home-top-detail-user-hn{
  display: flex;
  align-items: center;
  opacity: 0.8;
}
.notc{
  text-align: center;
}
.user-head{
  flex-shrink: 0;
  border-radius: 50%;
  height: 70rpx;
  width: 70rpx;
  margin-left: 30rpx;
}
.user-name {
  flex: 1;
  margin: 0 31rpx;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  opacity: 0.8;
}

.home-tabbar{
  display: flex;
  position: fixed;  
  bottom: 0;
  right: 0;
  width: 100%;
  height: 90rpx;
  background-color: white;
  border-top: 2px solid rgba(151, 151, 151, 0.2);
  flex-shrink: 0;
}
.home-hot,.home-user{
  width: 50%;
  display: flex;
  position: relative;
  align-items: center;
  border-right: 1px solid rgba(151, 151, 151, 0.2); 
}
.home-img{
  width: 50rpx;
  height: 50rpx;
  margin: 0rpx;
  padding-left: 30%;
}
.home-text{
  font-size: 30rpx;
  padding-left: 20rpx;
}
